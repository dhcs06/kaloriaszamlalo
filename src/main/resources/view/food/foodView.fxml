<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox
        fx:id="vbox"
        minWidth="500"
        minHeight="500"
        fx:controller="controller.FoodController"
        alignment="CENTER"
        xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ListView
                fx:id="listViewFood"
                prefHeight="250.0"
                prefWidth="250.0"
        />
        <HBox alignment="TOP_CENTER" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" text="Add" onAction="#onAddClick"/>
                <Button mnemonicParsing="false" text="Edit"/>
                <Button mnemonicParsing="false" text="Remove" onAction="#onRemoveClick"/>
                <Button mnemonicParsing="false" text="Cancel" onAction="#onCancelClick"/>
                <VBox>
                    <Label>Name of the food</Label>
                    <TextField fx:id="caloriesTextField"></TextField>
                    <Label>Calorie value of the food</Label>
                    <TextField fx:id="heightTextField"></TextField>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>

